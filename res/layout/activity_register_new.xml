<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/root_common"
    android:orientation="vertical" >

     <RelativeLayout
         android:layout_width="fill_parent"
         android:layout_height="@dimen/top_bar"
         android:background="@drawable/title_bar"
         android:orientation="vertical" >

        <Button
            android:id="@+id/btn_reg_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dip"
            android:background="@drawable/back_btn"
            android:gravity="center_horizontal|center_vertical"            
            android:onClick="onBack" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/btn_register"
            android:textColor="@color/white"
            android:textSize="20.0sp" />

    </RelativeLayout>
    
    <LinearLayout
        android:id="@+id/input"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="28.0dip"
        android:layout_marginRight="28.0dip"
        android:layout_marginTop="80.0dip"
        android:orientation="vertical" >  
        
        
        <LinearLayout            
        	android:layout_width="fill_parent"
        	android:layout_height="wrap_content"
        	android:orientation="horizontal">
        	
        <TextView
            android:id="@+id/tv_user_prefix"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="44.0dip"
            android:background="#00ffffff"
            android:ems="10"
            android:gravity="center_vertical"  
            android:paddingLeft="12.0dip"
            android:text="86-"
            android:textColor="#555555"
            android:textSize="16.0sp" >
        </TextView>        
        
        <EditText
            android:id="@+id/et_user"
            android:layout_width="0dp"
            android:layout_weight="5"
            android:layout_height="44.0dip"
            android:background="#00ffffff"
            android:ems="10"
            android:gravity="center_vertical"
            android:hint="输入手机号码"         
            android:maxLength="16"
            android:maxLines="1"
            android:textColor="#ff1d1d1d"
            android:textColorHint="#ff666666"
            android:digits="0123456789abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
            android:textSize="16.0sp" >
            <requestFocus />
        </EditText>
		</LinearLayout>
        <View
            android:layout_width="fill_parent"
            android:layout_height="1.0px"
            android:layout_marginLeft="1.0px"
            android:layout_marginRight="1.0px"
            android:background="#ffc0c3c4" />
    
        <EditText
            android:id="@+id/et_password"
            android:layout_width="fill_parent"
            android:layout_height="44.0dip"
            android:background="#00ffffff"
            android:ems="10"
            android:gravity="center_vertical"
            android:hint="输入密码"         
            android:maxLength="16"
            android:maxLines="1"
            android:paddingLeft="12.0dip"
            android:textColor="#ff1d1d1d"
            android:textColorHint="#ff666666"
            android:digits="0123456789abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
            android:textSize="16.0sp" 
            android:visibility="gone">
        </EditText>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1.0px"
            android:layout_marginLeft="1.0px"
            android:layout_marginRight="1.0px"
            android:background="#ffc0c3c4" />        
        
          <LinearLayout
	        android:id="@+id/ll_input"
	        android:layout_width="fill_parent"
	        android:layout_height="fill_parent"
	        android:layout_marginTop="10dp"
	        android:orientation="horizontal" >  
	        
              
               <RelativeLayout
			        android:id="@+id/ll_verify"
				     android:layout_width="0dp"
		            android:layout_weight="2"
			        android:layout_height="fill_parent"			        
			        android:orientation="vertical" >  
			        <EditText
			            android:id="@+id/et_verifycode"			        
			         	android:layout_width="fill_parent"
			            android:layout_height="fill_parent"
			            android:background="#00ffffff"
			            android:digits="0123456789"
			            android:hint="输入验证码"
			            android:maxLength="16"
			            android:maxLines="1"
			            android:paddingLeft="12.0dip"
			            android:textColor="#ff1d1d1d"
			            android:textColorHint="#ff666666"
			            android:textSize="16.0sp" />
			        
			             <View
			            android:layout_width="fill_parent"
			            android:layout_height="1.0px"
			            android:layout_marginLeft="1.0dp"
			            android:layout_alignParentBottom="true"
			            android:layout_marginRight="1.0dp"
			            android:background="#ffc0c3c4" />
	         </RelativeLayout>
   			 <Button            
   			    android:id="@+id/btn_reqverifycode"
	            android:layout_height="40dp"
	            android:layout_width="0dp"
	            android:layout_weight="1"      
	             android:layout_marginLeft="10dp"	               
	            android:background="@drawable/btn_register_bg"
	            android:gravity="center"  
	            android:text="获取短信验证码"
	            android:textSize="12sp" 
	            android:textColor="@color/white"
	            android:onClick="onReqVerifyCode" /> 	
           </LinearLayout>  
        
    <Button          
            android:layout_height="@dimen/btn_height"
         	android:layout_width="fill_parent"
            android:layout_marginTop="30.0dip"          
            android:background="@drawable/common_background"
            android:gravity="center"            
            android:paddingBottom="7dp" 
            android:text="@string/btn_register"
            android:textSize="20.0sp" 
            android:textColor="@color/white"
            android:onClick="onRegister" />        
    </LinearLayout>
</LinearLayout>